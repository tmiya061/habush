    </div>
    <!-- <div class="faq footer-menu-bar-item text-center">
      <p><span class="en color-gray">FAQ</span></p>
    </div> -->
    <div class="modal_btn pp footer-menu-bar-item text-center" data-target="modal-01">
      <p>プライバシーポリシー<span class="en">PRIVACY POLICY</span></p>
    </div>
    <div class="modal_btn ls footer-menu-bar-item text-center" data-target="modal-02">
      <p>
        <span class="en">LEGAL STATEMENT</span>特定商取引法<br class="for-sp">
        に基づく表記
      </p>
    </div>
    <div class="company footer-menu-bar-item text-center">
      {% if template == 'index' %}
      <a href="#info">
        <p><span class="en">COMPANY</span>会社概要</p>
      </a>
      {% else %}
      <a href="{{shop.url}}#info">
        <p><span class="en">COMPANY</span>会社概要</p>
      </a>
      {% endif %}
    </div>
  </div>

